<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaot.factory.dao.MenuDao">

    <select id="menuList" resultType="menuPo">
        select * from bs_menu
    </select>

    <insert id="addMenu" parameterType="menuPo">
        insert into bs_menu(menu_name, menu_url, menu_image)
        values(#{menuName}, #{menuUrl}, #{menuImage})
    </insert>

    <update id="updateMenu" parameterType="menuPo">
        update bs_menu set id = #{id}
        <if test="menuName != null and menuName != ''">
            , menu_name = #{menuName}
        </if>
        <if test="menuUrl != null and menuUrl != ''">
            , menu_url = #{menuUrl}
        </if>
        <if test="menuImage != null and menuImage != ''">
            , menu_image = #{menuImage}
        </if>
        where id = #{id}
    </update>

</mapper>